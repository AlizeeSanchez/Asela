<%- include('partials/header') %>

<div >
  <h3 style="text-align:center;"> ASELA > Nos questionnaires adoptions</h3>
</div>

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="En-Attente" data-toggle="tab" href="#waiting" role="tab" aria-controls="waiting" aria-selected="true">En attente</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Traited" data-toggle="tab" href="#traited" role="tab" aria-controls="traited" aria-selected="false">Traité</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Refused" data-toggle="tab" href="#refused" role="tab" aria-controls="refused" aria-selected="false">Refusé</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Sans-suite" data-toggle="tab" href="#discontinued" role="tab" aria-controls="discontinued" aria-selected="false">Sans suite</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Adopted" data-toggle="tab" href="#adopted" role="tab" aria-controls="adopted" aria-selected="false">Adopté</a>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">

    <!-------------------------------------------------En attente---------------------------------------------->
    <div class="tab-pane fade show active" id="waiting" role="tabpanel" aria-labelledby="En-Attente">
      <table class="table table-hover">
        <thead>
          <tr>
            <th cope="col">Reçu le</th>
            <th cope="col">Type</th>
            <th cope="col">Nom Animal</th>
            <th scope="col">Identité</th>
            <th scope="col">Email</th>
            <th scope="col">Numéro de téléphone</th>
            <th scope="col">Code postal / Ville</th>
            <th scope="col">Type de maison</th>
            <th scope="col">Animaux</th>
          </tr>
        </thead>
        <tbody>
          <% for(let questWaiting of waiting){ %>
            <tr data-toggle="modal" data-target=".bd-adoptant-modal-lg-profil<%= questWaiting.id %>"> 
              
                <td data-label="Reçu le"><a href="/v1/questionnaire/<%= questWaiting.id %>"><%= questWaiting.date_sending.toLocaleString('en-GB').substr(0, 10) %></a></td>
                <td data-label="Type"><%= questWaiting.type_pet %></td>
                <td data-label="Nom animal"><%= questWaiting.name_pet %></td>
                <td data-label="Identité"><%= questWaiting.lastname %> <%= questWaiting.firstname %></td>
                <td data-label="Email"><%= questWaiting.email %></td>
                <td data-label="Téléphone"><%= questWaiting.number_phone %></td>
                <td data-label="Ville"><%= questWaiting.postal_code %> <%= questWaiting.city %></td>
                <td data-label="Logement"><%= questWaiting.type_residence %></td>
                <td data-label="Animaux"><% if(questWaiting.pet_familly === true){ %> <%= questWaiting.pet_familly2 %> <% }else{ %> Non <%} %></td>
            </tr>
          <% } %> 
            
        </tbody>
      </table>
    </div>
    <!-------------------------------------------------Traité---------------------------------------------->
    <div class="tab-pane fade show" id="traited" role="tabpanel" aria-labelledby="Traited">
      <table class="table table-hover">
        <thead>
          <tr>
            <th cope="col">Reçu le</th>
            <th cope="col">Type</th>
            <th cope="col">Nom Animal</th>
            <th scope="col">Identité</th>
            <th scope="col">Email</th>
            <th scope="col">Numéro de téléphone</th>
            <th scope="col">Code postal / Ville</th>
            <th scope="col">Type de maison</th>
            <th scope="col">Animaux</th>
            <th scope="col">Commentaire</th>
            <th scope="col">Date de rencontre</th>
          </tr>
        </thead>
        <tbody>
          <% for(let questProcessed of processed){ %>
               <% console.log(questProcessed); %> 
            <tr data-toggle="modal" data-target=".bd-adoptant-modal-lg-profil<%= questProcessed.id %>"> 
              <td data-label="Reçu le"><a href="/v1/questionnaire/<%= questProcessed.id %>"><%= questProcessed.date_sending.toLocaleString('en-GB').substr(0, 10) %></a></td>
              <%= console.log(questProcessed.id); %> 
              <td data-label="Type"><%= questProcessed.type_pet %></td>
              <td data-label="Nom Animal"><%= questProcessed.name %></td>
              <td data-label="Identité"><%= questProcessed.lastname %> <%= questProcessed.firstname %></td>
              <td data-label="Email"><%= questProcessed.email %></td>
              <td data-label="Téléphone"><%= questProcessed.number_phone %></td>
              <td data-label="Ville"><%= questProcessed.postal_code %> <%= questProcessed.city %></td>
              <td data-label="Logement"><%= questProcessed.type_residence %></td>
              <td data-label="Animaux"><% if(questProcessed.pet_familly === true){ %> <%= questProcessed.pet_familly2 %> <% }else{ %> Non <% } %></td>
              <td data-label="Commentaire"><%= questProcessed.general_comment %></td>
              <td data-label="Date de rencontre"><%= questProcessed.meet%></td>
              
            </tr>
          <% } %> 
            
        </tbody>
      </table>
    </div> 
    <!-------------------------------------------------Refusé---------------------------------------------->
    <div class="tab-pane fade show" id="refused" role="tabpanel" aria-labelledby="Refused">
      <table class="table table-hover">
        <thead>
          <tr>
            <th cope="col">Reçu le</th>
            <th cope="col">Type</th>
            <th cope="col">Nom Animal</th>
            <th scope="col">Identité</th>
            <th scope="col">Email</th>
            <th scope="col">Numéro de téléphone</th>
            <th scope="col">Code postal / Ville</th>
            <th scope="col">Type de maison</th>
            <th scope="col">Animaux</th>
            <th scope="col">Commentaire de refus</th>
          </tr>
        </thead>
        <tbody>
          <% for(let questRefused of refused){ %>
               
            <tr data-toggle="modal" data-target=".bd-adoptant-modal-lg-profil<%= questRefused.id %>"> 
              <td data-label="Reçu le"><a href="/v1/questionnaire/<%= questRefused.id %>"><%= questRefused.date_sending.toLocaleString('en-GB').substr(0, 10) %></a></td>
              <td data-label="Type"><%= questRefused.type_pet %></td>
              <td data-label="Nom animal"><%= questRefused.name_pet %></td>
              <td data-label="Identité"><%= questRefused.lastname %> <%= questRefused.firstname %></td>
              <td data-label="Email"><%= questRefused.email %></td>
              <td data-label="Téléphone"><%= questRefused.number_phone %></td>
              <td data-label="Ville"><%= questRefused.postal_code %> <%= questRefused.city %></td>
              <td data-label="Logement"><%= questRefused.type_residence %></td>
              <td data-label="Animaux"><% if(questRefused.pet_familly === true){ %> <%= questRefused.pet_familly2 %> <% }else{ %> Non <%} %></td>
              <td data-label="Commentaire de refus"><%= questRefused.refused_comment %></td>
            </tr>
          <% } %> 
            
        </tbody>
      </table>
    </div> 
    <!-------------------------------------------------Sans suite---------------------------------------------->
    <div class="tab-pane fade show" id="discontinued" role="tabpanel" aria-labelledby="Sans-suite">
      <table class="table table-hover">
        <thead>
          <tr>
            <th cope="col">Reçu le</th>
            <th cope="col">Type</th>
            <th cope="col">Nom Animal</th>
            <th scope="col">Identité</th>
            <th scope="col">Email</th>
            <th scope="col">Numéro de téléphone</th>
            <th scope="col">Code postal / Ville</th>
            <th scope="col">Logement</th>
            <th scope="col">Animaux</th>
            <th scope="col">Commentaire général</th>
          </tr>
        </thead>
        <tbody>
          <% for(let questDiscontinued of discontinued){ %>
               
            <tr data-toggle="modal" data-target=".bd-adoptant-modal-lg-profil<%= questDiscontinued.id %>"> 
               
              <td data-label="Reçu le"><a href="/v1/questionnaire/<%= questDiscontinued.id %>"><%= questDiscontinued.date_sending.toLocaleString('en-GB').substr(0, 10) %></a></td>
              <td data-label="Type"><%= questDiscontinued.type_pet %></td>
              <td data-label="Nom animal"><%= questDiscontinued.name_pet %></td>
              <td data-label="Identité"><%= questDiscontinued.lastname %> <%= questDiscontinued.firstname %></td>
              <td data-label="Email"><%= questDiscontinued.email %></td>
