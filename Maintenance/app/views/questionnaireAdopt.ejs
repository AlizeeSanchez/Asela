              <td data-label="Ville"><%= questDiscontinued.postal_code %> <%= questDiscontinued.city %></td>
              <td data-label="Logement"><%= questDiscontinued.type_residence %></td>
              <td data-label="Animaux"><% if(questDiscontinued.pet_familly === true){ %> <%= questDiscontinued.pet_familly2 %> <% }else{ %> Non <%} %></td>
              <td data-label="Commentaire général">  <% if(questDiscontinued.general_comment){ %> <%= questDiscontinued.general_comment %> <% }else{%> - <%} %> </td>
               
            </tr>
          <% } %> 
            
        </tbody>
      </table>
    </div> 
    <!-------------------------------------------------Adopté---------------------------------------------->
    <div class="tab-pane fade show" id="adopted" role="tabpanel" aria-labelledby="Adopted">
      <table class="table table-hover">
        <thead>
          <tr>
            <th cope="col">Reçu le</th>
            <th cope="col">Type</th>
            <th cope="col">Nom Animal</th>
