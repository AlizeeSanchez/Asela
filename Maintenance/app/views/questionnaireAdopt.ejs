              <td data-label="Reçu le">
                <a href="/v1/questionnaire/<%= questAdopted.id %>"><%= questAdopted.date_sending.toLocaleString('en-GB').substr(0, 10) %>
                </a>
              </td>
              <td data-label="Type"> <%= questAdopted.type_pet %> </td>
              <td data-label="Nom Animal"><%= questAdopted.name_pet %></td>
              <td data-label="Identité"><%= questAdopted.lastname %> <%= questAdopted.firstname %></td>
              <td data-label="Email"><%= questAdopted.email %></td>
              <td data-label="Téléphone"><%= questAdopted.number_phone %></td>
              <td data-label="Adresse"><%= questAdopted.postal_code %> <%= questAdopted.city %> <%= questAdopted.adress %></td>
              <td data-label="Logement"><%= questAdopted.type_residence %></td>
              <td data-label="Animaux"><% if(questAdopted.pet_familly === true){ %> <%= questAdopted.pet_familly2 %> <% }else{ %> Non <%} %></td>
              <td data-label="Commentaire général">  <% if(questAdopted.general_comment){ %> <%= questAdopted.general_comment %> <% }else{%> - <%} %> </td>
            </tr>
          <% } %> 
            
        </tbody>
      </table>
    </div>           
  </div>
   

