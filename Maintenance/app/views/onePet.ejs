                <select class="custom-select" id="SelectHostFamily">
                    <% if(!hostFamilly[0]){ %>               
                        <option> Choisir* </option> 
                        <% for(let familly of allHostFamilly){ %>
                          
                            <option value="<%= familly.id%>"><%= familly.lastname %> <%= familly.firstname %> de <%=familly.city %></option> 
