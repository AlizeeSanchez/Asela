<%- include('partials/header') %>

<div class="alert alert-warning" role="alert">
    Est ce qu'on affiche les veterinaires par departement et prise en charge ou simplement par departement
  </div>

<div class="table table-striped table-bordered table-responsive tableFixHead" id="home" role="tabpanel" aria-labelledby="home-tab">
    <table class="table table-hover">
        <thead >
          <tr>
            <th scope="col">NOM DU CABINET</th>
            <th scope="col">TELEPHONE</th>
            <th scope="col">CODE POSTAL</th>
            <th scope="col">VILLE</th>
            <th scope="col">ADRESSE</th>
            <th scope="col">EMAIL</th>
            <th scope="col">PRIX CASTRATION CHIENS</th>
            <th scope="col">PRIX STERILISATION CHIENS 10 KG</th>
            <th scope="col">PRIX STERILISATION CHIENS 10/25 KG</th>
            <th scope="col">PRIX STERILISATION CHIENS 25/40 KG</th>
            <th scope="col">PRIX STERILISATION CHIENS 40 KG</th>
            <th scope="col">PRIX VACCINATION CHIENS</th>
            <th scope="col">PRIX IDENTIFICATION CHIENS</th>
            <th scope="col">PRIX CASTRATION CHATS</th>
            <th scope="col">PRIX TATOUAGE ET IDENTIFICATION CHATS PACK</th>
            <th scope="col">PRIX STERILISATION CHATS</th>
            <th scope="col">PRIX STERILISATION ET STERILISATION CHATS PACK</th>
            <th scope="col">PRIX VACCINATION CHATS</th>
            <th scope="col">PRIX IDENTIFICATION CHATS</th>
            <th scope="col">SUPPRIMER</th>
            <th scope="col">MODIFIER</th>
          </tr>
        </thead>
        <tbody>
    
        <% for(let veterinaryTab of allveterinary.gard){ %>
  
            <% if(veterinaryTab.disponibility === true){ %>
                <tr style="background-color: rgb(141, 214, 153)">
            <% } else{ %>
                <tr>
            <% } %>
            <td><%= veterinaryTab.name %></td>
            <td><%= veterinaryTab.number_phone %></td>
            <td><%= veterinaryTab.postal_code %></td>
            <td><%= veterinaryTab.city %></td>
            <td><%= veterinaryTab.adress %></td>
            <td><%= veterinaryTab.email %></td>
            <td><%= veterinaryTab.dog_castration %></td>
            <td><%= veterinaryTab.dog_ovario_10 %>
            <td><%= veterinaryTab.dog_ovario_10_25 %></td>
            <td><%= veterinaryTab.dog_ovario_25_40 %></td>
            <td><%= veterinaryTab.dog_ovario_40 %></td>
            <td><%= veterinaryTab.dog_vaccine %></td>
            <td><%= veterinaryTab.dog_ide %></td>
            <td><%= veterinaryTab.cat_castration %></td>
            <td><%= veterinaryTab.cat_castration_tatouage %></td>
            <td><%= veterinaryTab.cat_ovario %></td>
            <td><%= veterinaryTab.cat_ovario_tatouage %></td>
            <td><%= veterinaryTab.cat_vaccine %></td>
            <td><%= veterinaryTab.cat_ide %></td>
            <td><button type="button" class="btn btn-outline-primary">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"></path>
              </svg>
              </button>
            </td>
            <td><button type="button" class="btn btn-outline-primary">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-gear-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z"></path>
              </svg>
              </button>
            </td>
            </tr>
           
          <% } %>
        </tbody>
    </table>
    
  </div>

  <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
  <script>
    var $th = $('.tableFixHead').find('thead')
  $('.tableFixHead').on('scroll', function() {
    $th.css('transform', 'translateY('+ this.scrollTop +'px)');
  });
  </script>